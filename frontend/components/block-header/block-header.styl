div.block-header
  width 100%
  overflow hidden
  
div.block-header .helper 
  display inline-block
  height 100%
   
img.icon
  height 100%
  vertical-align middle

span.header-title
  text-transform uppercase
  color: #3d6cb0
  font-size 30px
  vertical-align middle
  font-weight: 600

  padding-left 12px
  font-size 38px
  font-stretch semi-condensed
  letter-spacing -2px


span.header-title::after
  content ""
  display inline-block
  box-sizing: border-box
  vertical-align middle
  width 100%
  height 5px
  background-color #3d6cb0
  border solid white
  border-width 0 10px
  margin-right -100%
 